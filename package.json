{
  "name": "@konstruct/ui",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/konstructio/konstruct-ui.git"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "homepage": "https://konstructio.github.io/konstruct-ui",
  "scripts": {
    "build": "rimraf ./dist && tsc --p ./tsconfig.build.json && vite build && cp ./package.json ./dist/package.json",
    "build:storybook": "storybook build -o storybook-static && cp -r public/* storybook-static",
    "check:prettier": "prettier lib --check --config ./.prettierrc",
    "check:types": "tsc -p tsconfig.json",
    "deps:update": "npx npm-check-updates --interactive --format group",
    "dev": "vite",
    "format:prettier": "prettier lib --write './**/*.{js,jsx,ts,tsx}' --config ./.prettierrc",
    "lint": "eslint lib --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepare": "husky",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "echo \"No tests specified\""
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "js-cookie": "^3.0.5",
    "react-feather": "^2.0.10",
    "react-focus-lock": "^2.13.2",
    "react-remove-scroll": "^2.6.0",
    "tailwind-merge": "^2.5.4"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-interactions": "^8.3.6",
    "@storybook/addon-links": "^8.3.6",
    "@storybook/addon-styling-webpack": "^1.0.0",
    "@storybook/blocks": "^8.3.6",
    "@storybook/react": "^8.3.6",
    "@storybook/react-vite": "^8.3.6",
    "@storybook/test": "^8.3.6",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.12.0",
    "@typescript-eslint/parser": "^8.12.0",
    "@vitejs/plugin-react": "^4.3.3",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-storybook": "^0.9.0",
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "storybook": "^8.3.6",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-lib-inject-css": "^2.1.1"
  }
}
