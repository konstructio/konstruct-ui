{
  "name": "@konstruct/ui",
  "description": "A set of reusable and customizable React components built for konstruct.io",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Jes√∫s Manuel Fuentes Trejo",
    "email": "me@futjesus.dev",
    "url": "https://futjesus.dev"
  },
  "keywords": [
    "konstruct",
    "colony",
    "kubefirst",
    "react",
    "tailwind",
    "vite",
    "vitest",
    "radix"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/konstructio/konstruct-ui.git"
  },
  "bugs": {
    "url": "https://github.com/konstructio/konstruct-ui/issues"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "homepage": "https://konstructio.github.io/konstruct-ui",
  "scripts": {
    "build": "tsc --p ./tsconfig.build.json && tsup && cp ./package.json ./dist/package.json && cp ./scripts/generate-exports.js ./dist/generate-exports.js && node ./dist/generate-exports.js",
    "build:storybook": "storybook build -o storybook-static && cp -r public/* storybook-static",
    "check:exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "check:prettier": "prettier lib --check --config ./.prettierrc",
    "check:types": "tsc -p tsconfig.json",
    "ci": "npm run build && npm run check:prettier && npm run check:exports && npm run test",
    "ci:release": "changeset version && changeset publish",
    "deps:update": "npx npm-check-updates --interactive --format group",
    "dev": "vite",
    "format:prettier": "prettier lib --write './**/*.{js,jsx,ts,tsx}' --config ./.prettierrc",
    "lint": "eslint lib --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepare": "husky",
    "prepublishOnly": "npm run ci",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run --coverage",
    "test:watch": "vitest run -w"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-visually-hidden": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "js-cookie": "^3.0.5",
    "react-feather": "^2.0.10",
    "react-focus-lock": "^2.13.2",
    "react-remove-scroll": "^2.6.0",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^2.5.4"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@changesets/cli": "^2.27.9",
    "@storybook/addon-essentials": "^8.4.4",
    "@storybook/addon-interactions": "^8.4.4",
    "@storybook/addon-links": "^8.4.4",
    "@storybook/addon-styling-webpack": "^1.0.1",
    "@storybook/blocks": "^8.4.4",
    "@storybook/react": "^8.4.4",
    "@storybook/react-vite": "^8.4.4",
    "@storybook/test": "^8.4.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.5",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-storybook": "^0.9.0",
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.4.4",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vitest": "^2.1.5"
  }
}